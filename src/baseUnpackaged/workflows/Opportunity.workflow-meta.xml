    <fieldUpdates>
        <fullName>OpportunityAmountUpdate</fullName>
        <description>Updating the opportunity</description>
        <field>Amount</field>
        <formula>IF(
    OR(
        Total_Node_Value__c &gt; 0,
        ISPICKVAL(Estimated_Value__c,&quot;&quot;)
    ),
    Total_Node_Value__c,
    IF(
        ISPICKVAL(Estimated_Value__c, &quot;Low (&lt;70k)&quot;),
        35000,
        IF(
            ISPICKVAL(Estimated_Value__c, &quot;Mid (&gt;70k, &lt;300k)&quot;),
            185000,
            IF(
                ISPICKVAL(Estimated_Value__c, &quot;High (&gt;300k)&quot;),
                300000,
                0
            )
        )
    )
)</formula>
        <name>OpportunityAmountUpdate</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>OpportunityAmountOverride</fullName>
        <actions>
            <name>OpportunityAmountUpdate</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>(1 AND 2) OR 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Total_Node_Value__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Amount_Override__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Estimated_Value__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>This overrides the default opportunity value using our custom subtotals.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>

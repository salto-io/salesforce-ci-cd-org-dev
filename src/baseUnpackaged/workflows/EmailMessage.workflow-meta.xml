            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>notContain</operation>
            <value>Onboarding Pipeline,Trial Pipeline,Acct Management,Sales Emails</value>
        </criteriaItems>
        <description>Workflow to move support case to waiting on customer from ready to work.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
